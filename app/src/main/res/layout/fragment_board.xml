<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/background_lb"
    android:layout_gravity="center_vertical"
    tools:context=".fragment.LeaderBoardFragment">


    <ListView
        android:id="@+id/listView"
        android:layout_width="@dimen/_350sdp"
        android:layout_height="@dimen/_300sdp"
        android:layout_gravity="bottom|left|fill_horizontal"
        android:layout_marginTop="@dimen/_320sdp"
        android:layoutDirection="ltr"
        android:divider="@android:color/transparent"
        android:dividerHeight="-40dp"
        android:padding="0dip"

        />

    <ImageView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_180sdp"

        android:layout_centerHorizontal="true"



        android:layout_marginTop="135dp"
        android:src="@mipmap/tshirt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269" />

    <TextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_centerHorizontal="true"
android:textSize="@dimen/_5sdp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="@dimen/_300sdp"
        android:background="@mipmap/text_leaderboard" />


</RelativeLayout>
