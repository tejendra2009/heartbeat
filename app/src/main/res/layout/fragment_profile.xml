<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_profile"
    tools:context=".fragment.ProfileFragment">


    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_44sdp"

        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginRight="@dimen/_77sdp"
        android:layout_marginBottom="@dimen/_287sdp"
        android:src="@mipmap/label_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.280"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextName"
        android:layout_width="@dimen/_205sdp"
        android:layout_height="@dimen/_28sdp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingTop="7dp"
        android:layout_marginBottom="@dimen/_270sdp"
        android:background="@mipmap/inputfield_image_profile"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/oppo2019044a070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="wrap_content"

        android:src="@mipmap/label_email"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginRight="@dimen/_77sdp"
        android:layout_marginBottom="@dimen/_225sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/refferal_code"
        android:layout_width="@dimen/_205sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/_160sdp"
        android:background="@mipmap/inputfield_image_profile"
        android:fontFamily="@font/oppo2019044a070"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_44sdp"

        android:src="@mipmap/label_refferal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginRight="@dimen/_67sdp"
        android:layout_marginBottom="@dimen/_175sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="@dimen/_205sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:fontFamily="@font/oppo2019044a070"
        android:layout_marginBottom="@dimen/_215sdp"
        android:background="@mipmap/inputfield_image_profile"
android:textColor="@android:color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />


    <Button
        android:id="@+id/tnc"
        android:layout_width="134dp"
        android:layout_height="12dp"


        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="135dp"
        android:background="@mipmap/tnc"
        android:enabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <ImageView
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="65dp"

        android:src="@mipmap/refer_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/share_refferal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal"

        android:layout_marginBottom="30dp"
        android:background="@mipmap/share_button_bottom_share"
        android:clickable="true"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:typeface="monospace" />
</FrameLayout>
